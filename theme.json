{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "FSE-Fescon",
	"settings": {
		"layout": {
			"contentSize": "1500px",
			"wideSize": "1800px"
		},
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "transparent",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#000000",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#FFDE10",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"color": "#F4F4F4",
					"name": "Quaternary",
					"slug": "quaternary"
				}
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
				"fontFace": [
					{
						"fontFamily": "UniNeue",
						"fontStretch": "normal",
						"fontStyle": "normal",
						"fontWeight": "400",
						"src": [
							"file:./assets/font/UniNeue-Regular.otf"
						]
					}
				],
				"fontFamily": "\"UniNeue\", sans-serif",
				"name": "UniNeue",
				"slug": "unineue"
				}
			],
			"fontSizes": [
				{
				"slug": "small",
				"name": "Small",
				"size": "16px"
				},
				{
				"slug": "medium",
				"name": "Medium",
				"size": "22px"
				},
				{
				"slug": "large",
				"name": "Large",
				"size": "28px"
				},
				{
				"slug": "x-large",
				"name": "XL",
				"size": "40px"
				},
				{
				"slug": "xx-large",
				"name": "XXL",
				"size": "96px"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"border": {
					"radius": "5px"
				}
			},
			"heading": {
				"typography": {
					"fontFamily":"var(--wp--preset--font-family--unineue)",
					"lineHeight": "1.35"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--unineue)",
			"fontSize":"22px",
			"lineHeight": "1.5"
		},
		"spacing": {
			"blockGap": "160px"
		}
	},
	"patterns" : [
        "fse-fescon/query-loop-termine"
    ]
}
